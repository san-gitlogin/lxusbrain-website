rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user has active subscription
    function hasActiveSubscription() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.planStatus == 'active';
    }

    // Helper function to validate subscription data (only Cloud Functions can write)
    function isValidSubscriptionUpdate() {
      let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
      // Users cannot modify their own subscription/payment fields
      return !affectedKeys.hasAny(['plan', 'planStatus', 'razorpay_customer_id',
        'razorpay_subscription_id', 'subscription_expires_at', 'payment_history']);
    }

    // ============================================
    // USER PROFILES
    // ============================================
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);

      // Users can create their own profile (on signup)
      allow create: if isOwner(userId);

      // Users can update their profile, but NOT payment/subscription fields
      // Payment fields are updated by Cloud Functions only
      allow update: if isOwner(userId) && isValidSubscriptionUpdate();

      // Users cannot delete their profile (admin only)
      allow delete: if false;

      // ============================================
      // USER PROJECTS (Subcollection)
      // ============================================
      match /projects/{projectId} {
        // Users can read their own projects
        allow read: if isOwner(userId);

        // Users can create projects if authenticated
        allow create: if isOwner(userId);

        // Users can update their own projects
        allow update: if isOwner(userId);

        // Users can delete their own projects
        allow delete: if isOwner(userId);

        // ============================================
        // PROJECT SEGMENTS (Subcollection of projects)
        // ============================================
        match /segments/{segmentId} {
          allow read, write: if isOwner(userId);
        }

        // ============================================
        // PROJECT EXPORTS (Subcollection of projects)
        // ============================================
        match /exports/{exportId} {
          allow read, write: if isOwner(userId);
        }
      }

      // ============================================
      // USER VOICE SAMPLES (for voice cloning)
      // ============================================
      match /voice_samples/{sampleId} {
        allow read, write: if isOwner(userId);
      }

      // ============================================
      // USER FAVORITES (saved voices, fonts, etc.)
      // ============================================
      match /favorites/{favoriteId} {
        allow read, write: if isOwner(userId);
      }

      // ============================================
      // PAYMENT HISTORY (read-only for users)
      // ============================================
      match /payments/{paymentId} {
        // Users can read their payment history
        allow read: if isOwner(userId);
        // Only Cloud Functions can write payment records
        allow write: if false;
      }
    }

    // ============================================
    // EARLY ACCESS SIGNUPS (for launch notifications)
    // ============================================
    match /early_access/{docId} {
      // Anyone can sign up for early access
      allow create: if true;
      // But cannot read or modify other signups
      allow read, update, delete: if false;
    }

    // ============================================
    // APP CONFIGURATION (read-only for clients)
    // ============================================
    match /config/{configId} {
      allow read: if true;
      allow write: if false;
    }

    // ============================================
    // SUBSCRIPTION PLANS (read-only for clients)
    // ============================================
    match /plans/{planId} {
      allow read: if true;
      allow write: if false;
    }

    // ============================================
    // ORDERS (Cloud Functions only)
    // Users can only read their own orders
    // ============================================
    match /orders/{orderId} {
      // Users can read their own orders
      allow read: if isAuthenticated() &&
        resource.data.uid == request.auth.uid;
      // Only Cloud Functions can create/update orders
      allow write: if false;
    }

    // ============================================
    // SUBSCRIPTIONS (Cloud Functions only)
    // Users can only read their own subscriptions
    // ============================================
    match /subscriptions/{subscriptionId} {
      // Users can read their own subscriptions
      allow read: if isAuthenticated() &&
        resource.data.uid == request.auth.uid;
      // Only Cloud Functions can create/update subscriptions
      allow write: if false;
    }

    // ============================================
    // PROCESSED WEBHOOKS (Cloud Functions only)
    // Used for replay attack prevention
    // ============================================
    match /processed_webhooks/{eventId} {
      // No client access - Cloud Functions only
      allow read, write: if false;
    }

    // ============================================
    // RATE LIMITS (Cloud Functions only)
    // Used for cost protection and abuse prevention
    // ============================================
    match /rate_limits/{limitId} {
      // No client access - Cloud Functions only
      allow read, write: if false;
    }
  }
}
